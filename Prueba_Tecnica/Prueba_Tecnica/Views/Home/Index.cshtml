@{
    ViewData["Title"] = "Home";
    ViewData["datos"]= "home";
}

    <div class="card-group row">
        <div class="col-3 ">
            <a asp-controller="Home" asp-action="Reportes" aria-hidden="true" style="color:white">
                <div class="card text-white bg-primary " style="max-width: 18rem;">
                    <div class="card-header text-center"> <h2 class="text-center">Reportes Varios</h2></div>
                    <div class="card-body text-center">
                        <i class="fas fa-list-alt fa-5x " aria-hidden="true"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-3" style="margin-left:10px; margin-right:10px">
            <a asp-controller="Home" asp-action="ConfiguracionesMenu" style="color:white">
                <div class="card text-white bg-secondary " style="max-width: 18rem;">
                    <div class="card-header text-center"> <h2 class="text-center">Configuracion del menu</h2></div>
                    <div class="card-body text-center">
                        <i class="fas fa-cogs fa-5x" aria-hidden="true"></i>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-3">
            <a asp-controller="Home" asp-action="ConfiguracionesTienda" style="color:white">
                <div class="card text-white bg-success " style="max-width: 18rem;">
                    <div class="card-header text-center"> <h2 class="text-center">Configuracion de la tienda</h2></div>
                    <div class="card-body text-center">
                        <i class="fas fa-globe fa-5x" aria-hidden="true"></i>

                    </div>
                </div>
            </a>
        </div>
    </div>
